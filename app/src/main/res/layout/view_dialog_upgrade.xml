<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg_top"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_bg_upgrade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/iv_bg_bottom"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_white_bottom_radius12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg_top" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="是否升级到最新版本？"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_bottom"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_bottom" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="8dp"
        android:text="1、优化用户体验\n2、修复已知bug"
        android:textColor="@color/color_mid_font"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_bottom"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

    <Button
        android:id="@+id/btn_upgrade"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_selector_linear_radius"
        android:text="立即升级"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_bottom"
        app:layout_constraintEnd_toEndOf="@id/iv_bg_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_bottom" />

    <ImageView
        android:id="@+id/iv_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/img_x"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_bottom"
        app:layout_constraintTop_toBottomOf="@id/iv_bg_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>