<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    android:orientation="vertical"
    tools:context=".fragment.me.TabMeFragment">

    <RelativeLayout
        android:id="@+id/rl_usernick"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#EFECEB">

        <com.pai8.ke.widget.CircleImageView
            android:id="@+id/civ_avatar_me"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="70dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_avatar_def_me" />

        <TextView
            android:id="@+id/nickname_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/civ_avatar_me"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/civ_avatar_me"
            android:text="超人不会飞"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_edit_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nickname_me"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:src="@mipmap/ic_edit_me" />

        <ImageView
            android:id="@+id/image_remind_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nickname_me"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/image_edit_me"
            android:src="@mipmap/ic_tixing_me" />

        <LinearLayout
            android:id="@+id/rl_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_avatar_me"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_likecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5K"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获赞"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fllow_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="265"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_funs_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="682"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_scan_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3K"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="足迹"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_applyshop"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shap_me_layout_radius8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_applyshop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_shop_me" />

        <TextView
            android:id="@+id/tv_applyshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_applyshop"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_applyshop"
            android:text="申请商家入住"
            android:textColor="@color/color_black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="11dp"
            android:layout_alignBottom="@+id/tv_applyshop"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/me_right_arrow" />
    </RelativeLayout>


</LinearLayout>