<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="20dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品配送中"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="配送员正快马加鞭朝您赶来，请耐心等待"
            android:textColor="@color/color_light_font"
            android:textSize="12sp" />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:text="预计送达"
                android:textColor="@color/color_light_font"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status_pay"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="44dp"
            android:background="@drawable/shape_orgin_gradient"
            android:gravity="center"
            android:text="下一步"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/shape_white_top_radius8"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/color_default"
            android:id="@+id/iv_store"
           />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_store"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:text="有家酸菜鱼"
            android:drawableEnd="@mipmap/me_right_arrow"
            android:textColor="@color/text_black"
            android:drawablePadding="5dp"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系商家"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:layout_alignParentEnd="true"
            android:drawableStart="@mipmap/ic_phone_call"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>