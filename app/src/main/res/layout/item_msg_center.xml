<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_white"
                android:padding="16dp">

    <ImageView
            android:id="@+id/iv_msg_type_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_msg_type_order"/>

    <TextView
            android:id="@+id/tv_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_msg_type_order"
            android:paddingTop="2dp"
            android:text="订单消息"
            android:textColor="@color/color_dark_font"
            android:textSize="15sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_msg_type_order"
            android:layout_toRightOf="@+id/iv_msg_type_order"
            android:paddingBottom="2dp"
            android:text="您有一笔订单需要处理"
            android:textColor="@color/color_mid_font"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/tv_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_msg_title"
            android:layout_alignParentRight="true"
            android:text="昨天"
            android:textColor="@color/color_mid_font"
            android:textSize="12sp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="8dp"
              android:paddingEnd="8dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:gravity="center"
              android:background="@drawable/bg_red_message_new"
              android:id="@+id/tv_count"
              android:text="12"
              android:layout_marginTop="5dp"
              android:layout_alignRight="@id/tv_msg_date"
              android:layout_below="@id/tv_msg_date"
              android:textColor="@color/white"
              android:textSize="12sp"/>
</RelativeLayout>