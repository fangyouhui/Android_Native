<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/item_goods_iv_goods"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:src="@color/color_default" />

    <LinearLayout
        android:id="@+id/item_goods_ll"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_goods_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="鲜肉小笼包"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_month_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="月销量0"
                android:textColor="@color/color_light_font"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/item_tv_fabulous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/color_light_font"
                android:textSize="10dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/item_tv"
                android:layout_width="wrap_content"
                android:text="￥"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/item_tv"
                android:text="88"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:minWidth="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reduce_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_store_minus"
            android:gravity="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="#FF888888"
            android:textSize="14dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/tv_add_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@mipmap/ic_store_add"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>