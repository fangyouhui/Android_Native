<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/view_comm_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:text="金额"
                android:textColor="@color/color_light_font"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_price"
                android:background="@color/color_transition"
                android:hint="请输入优惠券金额"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tv_bank_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="满减条件"
                android:textColor="@color/color_light_font"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_bank_address"
                android:text="满"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_full"
                android:layout_width="62dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tv1"
                android:background="@drawable/shape_gray_radius16"
                android:gravity="center"
                android:hint="0"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/et_full"
                android:text="可用"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_reduce"
                android:layout_width="62dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tv2"
                android:background="@drawable/shape_gray_radius16"
                android:gravity="center"
                android:hint="0"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="有效时间"
                android:textColor="@color/color_light_font"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_choose_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_arrow1"
                android:layout_toEndOf="@+id/tv_time"
                android:background="@color/color_transition"
                android:hint="请选择有效时间"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@mipmap/me_right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发放数量"
                android:textColor="@color/color_light_font"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_choose_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_arrow2"
                android:layout_toEndOf="@+id/tv_num"
                android:background="@color/color_transition"
                android:hint="请选择发放数量"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@mipmap/me_right_arrow" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_selector_linear_radius"
        android:gravity="center"
        android:text="创建"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

</LinearLayout>