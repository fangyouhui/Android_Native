<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="#80ff5838" android:startColor="#80ff7f47" android:type="linear" android:useLevel="true" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:centerColor="#FF7F47" android:endColor="#FF5838" android:startColor="#FF7F47" />
            <corners android:radius="25dp" />
        </shape>
    </item>

</selector>