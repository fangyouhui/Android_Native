<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="rating_bar_custom" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <!-- Base Dialog style. -->
    <style name="style_BaseDialog" parent="Base.AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimAmount">0.38</item>
    </style>

    <!--LoadingDialog style.-->
    <style name="style_loadingDialog" parent="style_BaseDialog">
        <item name="android:backgroundDimAmount">0.1</item>
    </style>

    <!--BottomDialog style.-->
    <style name="style_bottomDialog" parent="style_BaseDialog">
        <item name="android:windowAnimationStyle">@style/style_anim_bottomDialog</item>
    </style>

    <!--BottomDialog anim.-->
    <style name="style_anim_bottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bottim_dialog_exit</item>
    </style>

    <style name="MyTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_transition</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AlphaAnim</item>
    </style>

    <style name="AlphaAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_selector</item>
    </style>

    <style name="common_spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
