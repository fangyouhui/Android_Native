<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base Dialog style. -->
    <style name="style_BaseDialog" parent="Base.AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimAmount">0.38</item>
    </style>

    <!--LoadingDialog style.-->
    <style name="style_loadingDialog" parent="style_BaseDialog">
        <item name="android:backgroundDimAmount">0.1</item>
    </style>

    <!--BottomDialog style.-->
    <style name="style_bottomDialog" parent="style_BaseDialog">
        <item name="android:windowAnimationStyle">@style/style_anim_bottomDialog</item>
    </style>

    <!--BottomDialog anim.-->
    <style name="style_anim_bottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bottim_dialog_exit</item>
    </style>

</resources>
