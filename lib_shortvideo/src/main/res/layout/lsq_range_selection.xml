<?xml version="1.0" encoding="utf-8"?>
<com.gh.qiniushortvideo.tusdk.playview.TuSdkRangeSelectionBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lsq_range_select"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/mainBackgroundColor"
    android:clickable="true">

    <com.gh.qiniushortvideo.tusdk.playview.rangeselect.TuSdkMovieGrayView
        android:id="@+id/lsq_left_bar"
        android:layout_width="15dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/lsq_left_bar_rect" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/lsq_left_bar"
            android:padding="5dp"
            android:src="@mipmap/edit_ic_arrow_left" />
    </com.gh.qiniushortvideo.tusdk.playview.rangeselect.TuSdkMovieGrayView>

    <FrameLayout
        android:id="@+id/lsq_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/lsq_right_bar"
        android:layout_toRightOf="@+id/lsq_left_bar">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="@color/colorWhite"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"></View>
    </FrameLayout>

    <com.gh.qiniushortvideo.tusdk.playview.rangeselect.TuSdkMovieGrayView
        android:id="@+id/lsq_right_bar"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@drawable/lsq_right_bar_rect" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/lsq_right_bar"
            android:padding="5dp"
            android:src="@mipmap/edit_ic_arrow_right" />
    </com.gh.qiniushortvideo.tusdk.playview.rangeselect.TuSdkMovieGrayView>

</com.gh.qiniushortvideo.tusdk.playview.TuSdkRangeSelectionBar>